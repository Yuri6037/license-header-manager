{
    "scopeName": "source.ltf",
    "patterns": [
        {
            "include": "#expression"
        }
    ],
    "repository": {
        "expression": {
            "patterns": [
                {
                    "include": "#variable"
                }
            ]
        },
        "variable": {
            "match": "({)([A-z]+)(})",
            "captures": {
                "1": {
                    "name": "markup.bold"
                },
                "2": {
                    "name": "variable.language"
                },
                "3": {
                    "name": "markup.bold"
                }
            }
        }
    }
}